/* pages/video/video.wxss */
.leftlogo , .rightlogo{
  width: 30px;
  height: 30px;
  flex-shrink: 0;
  margin: 0 0 5px 0;
}
.header{
  display: flex;
  margin: 5px 0 0 0;
}
.input{
  width: 100%;
  height: 30px;
  line-height: 30px;
  border:1px solid #eee
}
.placeholder{
  text-align: center;
  color: red
}
.scrollview{
  display: flex;
  height: 40px
  
}
.scrollview text{
  height: 26px;
  white-space: nowrap;
  margin: 0 0 0 10px;
  padding: 0;
  
}
.active{
  color: red;
  border-bottom:1px solid red;
}
.video{
  border-radius: 5px;
}
.videoScroll{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: calc(100vh - 35px - 40px)
  /* 不溢出body，就不会使用系统滚动条，就不会使视频上面的内容随着视频滚动，所以给个scrollview有个计算出的高度 */
  
 
}
.videoContainer{
  width: 90%;
  margin: 0 33px 10px 33px;

}